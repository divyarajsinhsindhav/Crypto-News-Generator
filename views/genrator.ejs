<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/navbar.ejs', { userId })%>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-body">
                        <h1 class="card-title text-center">Crypto News Generator</h1>
                        <% if (flag === false) { %>
                        <form action="/genrator" method="POST">
                            <div class="form-group">
                                <label for="coin">Select Cryptocurrency:</label>
                                <select class="form-control" id="coin" name="coin">
                                    <option value="bitcoin">Bitcoin</option>
                                    <option value="ethereum">Ethereum</option>
                                    <option value="litecoin">Litecoin</option>
                                </select>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Generate</button>
                            </div>
                        </form>
                        <% } %>
                        <% if (flag === true) { %>
                            <div class="form-group">
                                <label for="coin">Select Cryptocurrency:</label>
                                <select class="form-control" id="coin" name="coin">
                                    <option value="bitcoin">Bitcoin</option>
                                    <option value="ethereum">Ethereum</option>
                                    <option value="litecoin">Litecoin</option>
                                </select>
                            </div>
                            <div class="content-box mt-4">
                                <!-- Add content generated here -->
                                <p class="card-text">
                                    <% if (content) { %>
                                        <%= content %>
                                    <% } %>    
                                </p>
                            </div>
                            <form action="/genrator" method="get">
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary mt-4">Get New</button>
                                </div>
                            </form>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/script.ejs') %>
</body>
</html>
